{#
/**
 * @file
 * Event registration button display.
 */
#}
{% for item in items %}
  <div class="mt-4">
    {% set button %}
      {{ pattern('button', {
        'label': 'Register'|t,
        'icon': 'calendar-check',
        'icon_position': 'before',
      }) }}
    {% endset %}
    {{ pattern('link', {
      'label': button,
      'path': item['content']['#url'].toString(),
      'attributes': item['content']['attributes']
    }) }}
  </div>
{% endfor %}
